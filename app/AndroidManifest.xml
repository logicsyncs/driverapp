<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="durocrete.punedriver">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.durocrete.root.durocretpunedriverapp.network.AppController"
        android:allowBackup="true"
        android:icon="@drawable/durocreate"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.durocrete.root.durocretepunedriverapp.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="durocrete.punedriver.com.durocrete.root.durocretepunedriver.RouteNSiteSelectionActivity"
            android:screenOrientation="portrait" />

        <activity android:name="durocrete.punedriver.com.durocrete.root.durocretepunedriver.SummaryActivity"
            android:label="Summary Activity"></activity>

        <activity android:name="durocrete.punedriver.com.durocrete.root.durocretepunedriver.MapActivity3"
            android:label="Map Details"></activity>

    <activity android:name="com.durocrete.root.durocretpunedriverapp.MainActivity"
        android:launchMode="singleInstance"
        android:label="Home"></activity>

    </application>

</manifest>